sqlite3 db1
CREATE TABLE student (
    id INTEGER PRIMARY KEY,
    username TEXT NOT NULL,
    name TEXT NOT NULL,
    email TEXT NOT NULL,
    password TEXT NOT NULL
);
CREATE TABLE attendance (
    id INTEGER PRIMARY KEY,
    name TEXT NOT NULL,
    date_time TEXT NOT NULL
);
